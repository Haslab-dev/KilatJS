{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "types": ["bun-types"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": "..",
        "paths": {
            "kilatjs/core": ["./dist/core/index.d.ts"],
            "kilatjs": ["./dist/index.d.ts"]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
